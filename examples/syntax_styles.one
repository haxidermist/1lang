// Mixed style - braces where needed
function fibonacci:
  inputs:
    n: Integer
  outputs:
    result: Integer
  implementation: {
    if n <= 1: {
      return n
    } else: {
      return fibonacci(n - 1) + fibonacci(n - 2)
    }
  }

