// syntax_styles.one - Demonstrating programmable syntax in 1

// C-style syntax with braces
function sum_c_style:
  inputs:
    n: Integer
  outputs:
    result: Integer
  implementation: {
    total = 0
    i = 1

    while i <= n: {
      total = total + i
      i = i + 1
    }

    return total
  }

